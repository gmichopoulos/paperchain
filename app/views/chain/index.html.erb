
<% content_for :header do %>
  <% content_for :banner do %>
    <div class="container_12">
        <div class="grid_8 prefix_2"><h1><%= @chain.title %></h1></div>
        <div class="grid_2 next">stats/badges</div>
      </div>
    </div>
  <% end %>
  <%= render :partial => "shared/header" %>
<% end %>


<% content_for :body do %>
  <body id="chainPage">
<% end %>

<div class="container_12">
  <div class="grid_2">CHAIN</div>
  <div class="grid_8" id="links">
    <% @chain.links.each do |l| %>
      <div class="linkBox">
        <div class="title"><%= l.title %></div>
        <div class="text"><%= l.link_text.html_safe %></div>
        <div class="date"><%= l.date.to_date %></div>
      </div>
    <% end %>
  </div>
  <div class="grid_2 stats">
     <a href="#">Invite a member!</a>
    <div class="statsContainer">
      <span class="title">MEMBERS</span>
      <aside class="statsBox">
        <% @chain.authors.each do |a| %>
          <p><%= a.penname %></p>
        <% end %>
      </aside>
    </div>
  </div>
</div>
